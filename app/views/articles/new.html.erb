<h1>New Tidbit</h1>
<!-- errors -->
<div id="article-errors">
  <% @article.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %>
</div>

<!-- form -->
<%= form_for :article, url: "/users/#{current_user.id}/articles" do |f| %>
  <p>
    Style Name: <%= f.text_field :name %><br></p>
  <p>
    Image 1: <%= f.text_field :img1 %><br>
  </p>
  <p>
    Caption 1:<br>
    <%= f.text_area :cap1 %><br>
  </p>
  <p>
    Image 2: <%= f.text_field :img2 %><br>
  </p>
  <p>
    Caption 2:<br>
    <%= f.text_area :cap2 %><br>
  </p>
  <p>
    Image 3: <%= f.text_field :img3 %><br>
  </p>
  <p>
    Caption 3:<br>
    <%= f.text_area :cap3 %><br>
  </p>
  <p>
    Vidbit:<br>
    <%= f.text_field :vid %><br>
  </p>
  <%= f.submit "Submit" %>
<% end %>

<%= link_to "BACK TO PROFILE", user_path(current_user) %> |
<%= link_to "SIGN OUT", "/" %>
