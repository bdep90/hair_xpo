<!-- h2: displays user name, user avatar -->
<img src="<%= @user.avatar %>"></img>
<h4> <%= @user.user_name %> </h4>




<!-- link to create article -->
<%= link_to "CREATE TIDBIT", new_user_article_path(@user) %><br>


<!-- p: list of user articles -->

<% @user_articles.each do |article| %>
<p id="user-articles">
  <a href="/users/:user_id/articles/:id"><%= article.name %></a>
</p><br>
<% end %>


<!-- link to all expo tidbits -->
<%= link_to "TIDBITS GALLERY", "/users" %><br>




<!-- links to update account log out -->
<%= link_to "UPDATE ACCOUNT", edit_user_path(@user) %> |
<%= link_to "LOG OUT", "/" %>
